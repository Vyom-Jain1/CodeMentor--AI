{
  "name": "codementor-server",
  "version": "1.0.0",
  "description": "Backend for CodeMentor platform",
  "main": "server.js",
  "overrides": {
    "tr46": "^5.0.0"
  },
  "scripts": {
    "start": "node --trace-deprecation server.js",
    "dev": "nodemon --trace-deprecation server.js",
    "test": "jest",
    "lint": "eslint .",
    "seeder": "node utils/seeder.js"
  },
  "dependencies": {
    "@craco/craco": "^7.1.0",
    "apicache": "^1.6.3",
    "axios": "^1.9.0",
    "axios-retry": "^4.5.0",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dockerode": "^3.3.5",
    "dotenv": "^16.5.0",
    "express": "^4.21.2",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.2.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^7.8.7",
    "morgan": "^1.10.0",
    "multer": "^1.4.5-lts.1",
    "nodemailer": "^7.0.3",
    "socket.io": "^4.8.1",
    "tar-stream": "^3.1.6",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "devDependencies": {
    "eslint": "^8.38.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.1.3",
    "husky": "^9.0.11",
    "jest": "^29.5.0",
    "lint-staged": "^15.2.2",
    "mongodb-memory-server": "^8.12.0",
    "nodemon": "^2.0.22",
    "prettier": "^3.2.5",
    "supertest": "^6.3.3"
  },
  "jest": {
    "testEnvironment": "node",
    "coverageDirectory": "./coverage",
    "testMatch": [
      "**/tests/**/*.test.js"
    ],
    "setupFiles": [
      "<rootDir>/tests/setup.js"
    ],
    "testTimeout": 30000,
    "verbose": true,
    "forceExit": true,
    "clearMocks": true,
    "restoreMocks": true
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.js": [
      "eslint --fix",
      "prettier --write"
    ]
  }
}
